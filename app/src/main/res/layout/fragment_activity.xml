<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="be.defrere.wallr.activity.EventDetailActivity"
    tools:showIn="@layout/activity_event_detail">

    <fragment
        android:id="@+id/fragment_buttons"
        android:name="be.defrere.wallr.fragments.ContentEventDetailFragement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top" />

    <fragment
        android:id="@+id/fragment_texts"
        android:name="be.defrere.wallr.fragments.TextsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top" />

</android.support.constraint.ConstraintLayout>
